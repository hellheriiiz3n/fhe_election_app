{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "hardhat"],
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "deploy/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "typechain-types/**/*.d.ts"
  ]
}



